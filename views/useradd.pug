extends ./com.pug  
block content
	h1 Thêm người thuê sách mới
	if errors
		each error in errors
			.alert.alert-danger= error
	form.ml-4(action="/user/add" method="POST" style="display:flex; flex-direction:column; width:500px; height:auto; gap: 12px;")
		input(type="text" name="name" placeholder="tên" value= values ? values.name : '')
		input(type="text" name="age" placeholder="độ tuổi" value= values ? values.age : '')
		input(type="text" name="email" placeholder="email" value= values ? values.email : '')
		input(type="text" name="password" placeholder="mật khẩu" value= values ? values.password : '')
		p phân quyền người dùng
		input#com(type='radio' name='isAdmin' checked='' value='false')
		label(for='com') user
		br
		input#com(type='radio' name='isAdmin' value='true')
		label(for='com') Admin
		button(type="submit") Tạo mới